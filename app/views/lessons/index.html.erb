<table>
  <tr>
    <th>Наименование</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lessons.each do |lesson| %>
  <tr>
    <td><%= lesson.name %></td>
    <td><%= link_to 'Показать', lesson %></td>
    <td><%= link_to 'Редактировать', edit_lesson_path(lesson) %></td>
    <td><%= link_to 'Удалить', lesson, method: :delete, data: { confirm: 'Точно?' } %></td>
  </tr>
<% end %>
</table>

