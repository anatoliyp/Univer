<h1>Оценки</h1>

<table>
  <tr>
    <th>Студент</th>
    <th>Предмет</th>
    <th>Оценка</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @journals.each do |journal| %>
  <tr>
    <td><%= Student.where(:id => journal.student_id).pluck(:name).first %>  </td>
    <td><%= Lesson.where(:id => journal.lesson_id).pluck(:name).first %></td>
    <td><%= journal.mark %></td>
    <td><%= link_to 'Показать', journal %></td>
    <td><%= link_to 'Редактировать', edit_journal_path(journal) %></td>
    <td><%= link_to 'Удалить', journal, method: :delete, data: { confirm: 'Точно?' } %></td>
  </tr>
<% end %>
</table>

