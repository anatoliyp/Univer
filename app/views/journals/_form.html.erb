<%= form_for(@journal) do |f| %>
  <% if @journal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@journal.errors.count, "error") %> prohibited this journal from being saved:</h2>

      <ul>
      <% @journal.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Студент" %><br />
    <% # f.number_field :student_id  %>
    <%=  collection_select(:journal, :student_id, Student.all, :id, :name, {:prompt => true}) %>
  </div>
  <div class="field">
    <%= f.label "Предмет" %><br />
    <% # f.number_field :lesson_id %>
    <%=  collection_select(:journal, :lesson_id, Lesson.all, :id, :name, {:prompt => true}) %>
  </div>
  <div class="field">
    <%= f.label "Оценка" %><br />
    <%= f.text_field :mark %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
