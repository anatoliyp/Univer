<h1>Студенты:</h1>

<table>
  <tr>
    <th>Имя</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @students.each do |student| %>
  <tr>
    <td><%= student.name %></td>
    <td><%= link_to 'Показать', student %></td>
    <td><%= link_to 'Редактировать', edit_student_path(student) %></td>
    <td><%= link_to 'Удалить', student, method: :delete, data: { confirm: 'Точно?' } %></td>
  </tr>
<% end %>
</table>

